<user-mapping>xrdpuser
    <authorize username="xrdpuser" password="{{ xrdpuser_pass | hash('md5') }}" encoding="md5">
      <connection name="RDP">
        <protocol>rdp</protocol>
        <param name="hostname">localhost</param>
        <param name="port">3389</param>
        <param name="username">xrdpuser</param>
        <param name="password">{{ xrdpuser_pass }}</param>
      </connection>
    </authorize>
</user-mapping>
